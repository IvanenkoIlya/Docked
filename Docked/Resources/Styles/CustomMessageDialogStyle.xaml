<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
   <ResourceDictionary.MergedDictionaries>
      <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Themes/Dialogs/BaseMetroDialog.xaml" />
   </ResourceDictionary.MergedDictionaries>

   <Style TargetType="{x:Type mah:MessageDialog}" BasedOn="{StaticResource MahApps.Styles.BaseMetroDialog}">
      <Setter Property="DialogContentMargin" Value="10*" />
      <Setter Property="DialogContentWidth" Value="80*" />
   </Style>
</ResourceDictionary>